<!-- section-brand-and-testimonial.liquid -->
<div data-section-id="{{ section.id }}" data-section-type="section-brand-and-testimonial" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="pb-80 engoc_no_rtl">
    <div class="container">
      <div class="row">
        <div class="col-md-6 mb-md-30">
          <div class="br-background-color">
            <h2 class="br-title text-center">{{section.settings.sbt_left_title}}</h2>
            <div {% if settings.enable_rtl %}dir="rtl" {% endif %}class="js-brand">
              {% for i in (1..8) %}

              {% capture _enable %}sbt_left_{{ i }}_enable{% endcapture %}
              {% capture _brand_background %}bg-brand-{{ i }}{% endcapture %}
              {% capture _brand_logo %}brand-{{ i }}{% endcapture %}
              {% capture _brand_name %}sbt_left_{{ i }}_title{% endcapture %}

              {% assign enable = section.settings[_enable] %}
              {% if enable %}
              {% assign brand_background = section.settings[_brand_background] %}
              {% assign brand_logo = section.settings[_brand_logo] %}
              {% assign brand_name = section.settings[_brand_name] %}

              <div class="br-brand text-center">
                {% if brand_background == blank and brand_logo == blank %}
                {% capture _img_bg %}bg-brand-{{ i }}.png{% endcapture %}
                {% capture _img_logo %}brand-{{ i }}.png{% endcapture %}
                <div class="br-brand__thumb" style="background-image: url('{{ _img_bg | asset_url}}');">
                  <img src="{{ _img_logo | asset_url}}" alt="">
                </div>
                {% else %}
                <div class="br-brand__thumb" style="background-image: url('{{ brand_background | img_url:'master' }}');">
                  {{ brand_logo | img_url:'master' | img_tag }}
                </div>
                {% endif %}
                <div class="br-brand__main">
                  <h6 class="br-brand__name">{{brand_name}}</h6>
                </div>
              </div>
              <!-- End .bs-brand -->
              {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-md-30">
          <div class="br-background-color">
            <h2 class="br-title text-center">{{section.settings.sbt_right_title}}</h2>
            <!-- add class .br-slick-black to be style black arrow and background: transparent; -->
            <div {% if settings.enable_rtl %}dir="rtl" {% endif %}class="js-testimonial">
              {% for i in (1..3) %}

              {% capture _enable_customer %}sbt_right_{{ i }}_enable{% endcapture %}
              {% capture _customer_img %}avt-{{ i }}{% endcapture %}
              {% capture _customer_content %}sbt_right_{{ i }}_content{% endcapture %}
              {% capture _customer_name %}sbt_right_{{ i }}_name{% endcapture %}

              {% assign enable_customer = section.settings[_enable_customer] %}
              {% if enable_customer %}
              {% assign customer_img = section.settings[_customer_img] %}
              {% assign customer_content = section.settings[_customer_content] %}
              {% assign customer_name = section.settings[_customer_name] %}

              <div class="br-testimonial">
                <div class="br-testimonial__avatar">
                  {% if customer_img == blank %}
                  {% capture _img_url %}avt-{{ i }}.png{% endcapture %}
                  <img src="{{ _img_url | asset_url}}" alt="">
                  {% else %}
                  {{ customer_img | img_url:'master' | img_tag }}
                  {% endif %}
                </div>
                <!-- End .br-testimonial__avatar -->
                <div class="br-testimonial__main">
                  <div class="br-testimonial__say">
                    <p>{{customer_content}}</p>
                  </div>
                  <!-- End .br-testimonial__say -->
                  <h5 class="br-testimonial__name">{{customer_name}}</h5>
                </div>
                <!-- End .br-testimonial__main -->
              </div>
              <!-- End .br-testimonial -->
              {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

