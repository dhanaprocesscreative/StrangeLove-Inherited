<!-- section-best-seller-products.liquid -->
<div data-section-id="{{ section.id }}" data-section-type="section-best-seller-products" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
{% assign products_limit = section.settings.best_seller_product_limit %}
{% assign col = section.settings.best_seller_product_collection %}
<section class="section pt-0 engoc_no_rtl">
  <div class="container">
    <h2 class="br-title text-center">{{section.settings.best_seller_product_title}}</h2>
    <div class="row">
      {% for product in collections[col].products limit: products_limit %}
      <div class="col-md-3 col-sm-6 col-tn-6">
        {% include 'product-item' %}
      </div>
      {% else %}
        {% include 'onboarding-empty-item-bestsp' %}
      {% endfor %}
    </div>
    <div class="text-center">
      <a href="{{section.settings.best_seller_product_btn_url}}" class="btn btn-default">{{section.settings.best_seller_product_btn_name}}</a>
    </div>
  </div>
</section>
</div>
{% schema %}
  {
    "name": "Best Seller",
    "class" : "index-section",
    "settings": [
      {
        "type": "header",
        "content": "Settings"
      },
      {
        "type": "text",
        "id": "best_seller_product_title",
        "label": "Title",
        "default": "best seller"
      },
      {
        "type": "collection",
        "id": "best_seller_product_collection",
        "label": "Select collection"
      },
      {
        "type": "text",
        "id": "best_seller_product_limit",
        "label": "Limit number of products",
        "default": "8"
      },
      {
        "type": "text",
        "id": "best_seller_product_btn_name",
        "label": "Button Name",
        "default": "shop more"
      },
      {
        "type": "text",
        "id": "best_seller_product_btn_url",
        "label": "Button URL",
        "default": "\/collections\/all"
      },
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      }
    ],
	  "presets": [
	    {
	      "name": "Best Seller Products",
	      "category": "Product"
	    }
	  ]
  }
{% endschema %}