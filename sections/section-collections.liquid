<!-- section-collections.liquid -->
<div data-section-id="{{ section.id }}" data-section-type="section-collections" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section class="section pt-0">
  <div class="br-card-wrapper-nojs br-card-categories--2" data-col="3" data-gap="0">
    {% if section.blocks.size > 0 %}
    	{%- assign i = 7 -%}
    	{% for block in section.blocks %}
        <div class="br-card inner-title br-card-categories__item">
          <div class="br-card__media">
            <div class="br-card__thumb engoc_hover_img">
              <a href="{{block.settings.btn_url}}">
                {% if block.settings.image_banner == blank %}
                	{% capture _img_url %}banner-cat{{i}}.png{% endcapture %}
                  <img src="{{ _img_url | asset_url}}"/>
                {% else %}
                	<img src="{{ block.settings.image_banner | img_url:'master' }}" alt="">
                {% endif %}
              </a>
              <div class="br-card__main">
                <h2 class="br-card-categories__title text-uppercase">{{block.settings.content_1}} <br><span>{{block.settings.content_2}}</span></h2>
                <a href="{{block.settings.btn_url}}" class="btn btn-primary">{{block.settings.btn_name}}</a>
              </div>
            </div>
          </div>
        </div>
    	{%- assign i = i | plus : 1 -%}
      	{% endfor %}
    {% endif %}
  </div>
</section>
</div>

{% schema %}

  {
    "name": "Collections",
    "class" : "index-section",
	"max_blocks": 3,
    "settings": [
          {
            "type": "header",
            "content": "Section Space"
          },
          {
            "type": "text",
            "id": "margin_top",
            "label": "Margin Top",
            "info": "Defined in pixels. Do not add the 'px' unit."
          },
          {
            "type": "text",
            "id": "margin_bottom",
            "label": "Margin Bottom",
            "info": "Defined in pixels. Do not add the 'px' unit."
          }
          ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
		"settings": [
			{
              "type": "image_picker",
              "id": "image_banner",
              "label": "Background"
            },
            {
              "type": "text",
              "id": "content_1",
              "label": "Content 1",
              "default": "shop"
            },
            {
              "type": "text",
              "id": "content_2",
              "label": "Content 2",
              "default": "Clothes"
            },
            {
              "type": "text",
              "id": "btn_name",
              "label": "Button Name",
              "default": "shop now"
            },
            {
              "type": "text",
              "id": "btn_url",
              "label": "Button URL",
              "default": "\/collections\/all"
      		}
		]
      }
	],
    "presets": [
      {
        "name": "Collections",
        "category": "Content",
		"blocks": [
			{
            	"type": "collection",
				"settings": {
					"content_1": "Shop",
					"content_2": "Clothes",
					"btn_name":	"Shop now",
					"btn_url": "\/collections\/all"
				}
            },
			{
            	"type": "collection" ,
				"settings": {
					"content_1": "Shop",
					"content_2": "Accessories",
					"btn_name":	"Shop now",
					"btn_url": "\/collections\/all"
				}
            },
			{
            	"type": "collection",
				"settings": {
					"content_1": "Shop",
					"content_2": "Underwear",
					"btn_name":	"Shop now",
					"btn_url": "\/collections\/all"
				} 
            }
		]
      }
    ]
  }
{% endschema %}