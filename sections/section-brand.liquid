    "name": "Brand",
    "class" : "index-section",
  	"max_blocks": 8,
    "settings": [
      {
        "type": "header",
        "content": "Settings"
      },
      {
        "type": "text",
        "id": "sb_title",
        "label": "Title",
        "default": "Brand"
