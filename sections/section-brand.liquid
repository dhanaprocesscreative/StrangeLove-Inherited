<!-- section-brand.liquid -->
<div data-section-id="{{ section.id }}" data-section-type="section-brand" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section class="pb-80 engoc_no_rtl">
  <div class="container">
    <h1 class="sr-only">{{section.settings.sb_title}}</h1>
    <div class="br-border">
      <div {% if settings.enable_rtl %}dir="rtl" {% endif %}class="js-brand-horizontal br-slick-animation br-slick-white">
        {% if section.blocks.size > 0 %}
        	{%- assign i = 1 -%}
          {% for block in section.blocks %}
            <div class="br-brand br-brand--style">
              <div class="br-brand__thumb">
                {% if block.settings.brand_img == blank %}
                	{% capture _img_url %}brand-black-{{ i }}.png{% endcapture %}
                  <a href="{{ block.settings.url }}"><img src="{{ _img_url | asset_url}}" alt="{{ block.settings.title }}"/></a>
                {% else %}
                <a href="{{ block.settings.url }}"><img src="{{ block.settings.brand_img | img_url: "master" }}" alt="{{ block.settings.title }}"/></a>
                {% endif %}
                
              </div>
            </div>
            <!-- End .bs-brand -->
        	{%- assign i = i | plus : 1 -%}
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</section>
</div>

{% schema %}
