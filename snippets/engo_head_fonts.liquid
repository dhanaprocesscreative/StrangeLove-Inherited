{% if settings.font_type == 'google_fonts' %}

{% assign fonts_1 = false %}
{% if settings.fonts_name_1 != blank %}
{% assign fonts_1 = true %}
{% endif %}

{% assign fonts_2 = false %}
{% if settings.fonts_name_2 != blank %}
{% assign fonts_2 = true %}
{% endif %}

{% assign fonts_3 = false %}
{% if settings.fonts_name_3 != blank %}
{% assign fonts_3 = true %}
{% endif %}

{% assign fonts_4 = false %}
{% if settings.fonts_name_4 != blank %}
{% assign fonts_4 = true %}
{% endif %}

<script type="text/javascript">
  WebFontConfig = {
    google: { families: [ 
      {% if fonts_1 %}
        '{{ settings.fonts_name_1 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_2 %}
      	{% if fonts_1 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_2 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_3 %}
      	{% if fonts_1 or fonts_2 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_3 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_4 %}
      	{% if fonts_1 or fonts_2 or fonts_3 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_4 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
    ] }
  };
  (function() {
    var wf = document.createElement('script');
    wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
      '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
    wf.type = 'text/javascript';
    wf.async = 'true';
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(wf, s);
  })(); 
</script>
{% else %}
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700%7CLato:400,400italic,700,700italic%7CPlayfair+Display:400,400italic,700italic,700%7CHind:400,700&amp;subset=latin,latin-ext" rel="stylesheet" type="text/css">
{% endif %}